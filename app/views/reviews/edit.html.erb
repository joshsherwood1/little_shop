<h1> Edit Review </h1>

<center>
  <%= form_tag "/items/#{@item.id}/#{@review.id}", method: :patch do %>
    <%= label_tag "Title:" %>
    <%= text_field_tag :title, "#{@review.title}" %>
    <%= label_tag "Review:" %>
    <%= text_field_tag :content, "#{@review.content}" %>
    <%= label_tag "Rating:" %>
    <%= text_field_tag :rating, "#{@review.rating}" %>

    <%= submit_tag 'Post Review' %>
  <% end %>
</center>
